<UserControl x:Class="University_students.View.TeacherPages.NoCertification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_students.View.TeacherPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid Height="450" VerticalAlignment="Top">
        <Grid.Background>
            <ImageBrush ImageSource="/University_students;component/Resources/img3.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBlock Foreground="Black" Margin="0,0,0,308" TextWrapping="Wrap" FontSize="48" FontFamily="Sitka Small" TextAlignment="Center" Text="On this moment there is not certification in university">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
        <Calendar SelectionMode="None"  x:Name="calendar" Margin="260,142,0,0" RenderTransformOrigin="0.5,0.5" Background="White" Foreground="#DD000000" BorderBrush="#FFDA1515" HorizontalAlignment="Left" Width="280">
            <Calendar.BlackoutDates/>
        </Calendar>
    </Grid>
</UserControl>
