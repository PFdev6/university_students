<UserControl x:Class="University_students.View.TeacherPages.NoCertification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_students.View.TeacherPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid HorizontalAlignment="Left" Width="800" Height="450" VerticalAlignment="Top">
        <TextBlock Foreground="Black" Margin="6,0,0,308" TextWrapping="Wrap" Text="On this moment there is not certification in university" FontSize="48" FontFamily="News706 BT" TextAlignment="Center"/>
        <Calendar SelectionMode="None"  x:Name="calendar" Margin="260,142,260,0" RenderTransformOrigin="0.5,0.5" Background="#FFF1D9A4" Foreground="#DD000000">
            <Calendar.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA3AEB9" Offset="0"/>
                    <GradientStop Color="#FF8399A9" Offset="0.375"/>
                    <GradientStop Color="#FF718597" Offset="0.375"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Calendar.BorderBrush>
            <Calendar.BlackoutDates/>
        </Calendar>
    </Grid>
</UserControl>
