<UserControl x:Class="University_students.View.TeacherPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:University_students.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="2,0,-2,0" Background="#FFAAB4F7">
        <TabControl Background="#FFE0B2">
            <TabItem Header="Groups" Content="{Binding GroupsContent}"/>
            <TabItem Header="My Subjects" Content="{Binding SubjectsContent}"/>
            <TabItem Header="Reports" Content="{Binding ReportsContent}"/>
            <TabItem Header="Exams" Content="{Binding ExamsContent}"/>
            <TabItem Header="Certification" Content="{Binding CertificationContent}"/>
        </TabControl>
        <Button  Command="{Binding LogOutCommand}"  Content="Log Out" Height="23" Background="#FFF51C12" BorderBrush="#FFF34605" FontSize="11" VerticalAlignment="Top" HorizontalAlignment="Right" Width="78"/>
    </Grid>
</UserControl>
