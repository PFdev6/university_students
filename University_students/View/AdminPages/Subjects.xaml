<Page x:Class="University_students.View.AdminPages.Subjects"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_students.View.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Subjects">

    <Grid>
        <Grid Grid.ColumnSpan="4" Grid.RowSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <DataGrid Margin="10,10,81,10" Grid.Row="1" AutoGenerateColumns="False" Grid.ColumnSpan="2" SelectedItem="{Binding SelectedSubjectDG}" ItemsSource="{Binding ListSubjects}" Grid.RowSpan="3" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="130" Header="Subject" Binding="{Binding Name}"/>
                    <DataGridTextColumn Width="130" Header="Number of hours" Binding="{Binding Hours}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Subjects" Margin="9,10,0,45" FontSize="36"/>
            <ComboBox Grid.Column="2" SelectedValue="{Binding SelectedFaculty, Mode=TwoWay}" Text="Faculty" Margin="166,13,76,72" ItemsSource="{Binding ListFaculties}"  DisplayMemberPath="Name"   VerticalAlignment="Stretch" Grid.ColumnSpan="2"/>
            <Label Content="Faculty" Grid.Column="2" Margin="76,13,52,72" RenderTransformOrigin="0.098,0.271"/>
            <Button Content="Add" Grid.Column="2" Command="{Binding InviteTeacherCommand}" Margin="166,75,114,10" Grid.Row="3" Height="Auto" RenderTransformOrigin="0.082,0.431" Grid.ColumnSpan="2"/>
            <Label Content="University" Grid.Column="1" Margin="10,10,118,72" RenderTransformOrigin="0.098,0.271"/>
            <Button  Content="Update" MaxHeight="70" MaxWidth="220" IsEnabled="{Binding IsEnabledUD}" Grid.Column="0" Command="{Binding UpdateCommand}" Height="Auto" RenderTransformOrigin="0.082,0.431" Margin="10,72,80,10" Background="#FFD8A620"/>
            <Button  Content="Delete" MaxHeight="70" MaxWidth="220" IsEnabled="{Binding IsEnabledUD}" Grid.Column="1" Command="{Binding DeleteCommand}" Height="Auto" RenderTransformOrigin="0.082,0.431" Margin="10,72,81,10" Background="#FFDA4D46"/>
            <ComboBox Grid.Column="1" SelectedValue="{Binding SelectedUniversity, Mode=TwoWay}"  Margin="87,13,155,72" ItemsSource="{Binding ListUniversities}" VerticalAlignment="Stretch" Grid.ColumnSpan="2"/>
            <TextBox Grid.ColumnSpan="2" Grid.Column="2" Margin="166,18,114,71" Grid.Row="1" TextWrapping="Wrap" Text="{Binding LoginTeacher}"/>
            <TextBox Grid.ColumnSpan="2" Grid.Column="2" Margin="166,50,114,39" Grid.Row="1" TextWrapping="Wrap" Text="{Binding FirstNameTeacher}"/>
            <ListBox Grid.Column="2" Margin="65,51,10,43" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <TextBox Grid.Column="3" Margin="70,20,10,69" Grid.Row="2" TextWrapping="Wrap" Text="{Binding SearchSubject}"/>
            <Label Content="Teachers" Grid.Column="2" Margin="65,20,76,66" Grid.Row="2"/>
            <Label Content="Name" Grid.Column="2" Margin="94,18,52,71" Grid.Row="1"/>
            <Label Content="Hours" Grid.Column="2" Margin="94,50,52,39" Grid.Row="1" RenderTransformOrigin="0.509,0.308"/>
            <Label Content="Search" Grid.Column="3" Margin="10,19,136,69" Grid.Row="2" RenderTransformOrigin="0.509,0.308"/>
        </Grid>
    </Grid>
</Page>
