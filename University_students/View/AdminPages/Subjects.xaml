<Page x:Class="University_students.View.AdminPages.Subjects"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_students.View.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Subjects">

    <Grid>
        <Grid Grid.ColumnSpan="4" Grid.RowSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="213*"/>
                <ColumnDefinition Width="187*"/>
                <ColumnDefinition Width="200*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <DataGrid Margin="10" Grid.Row="1" AutoGenerateColumns="False" Grid.ColumnSpan="2" SelectedItem="{Binding SelectedSubjectDG}" ItemsSource="{Binding ListSubjects}" Grid.RowSpan="3" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="130" Header="Subject" Binding="{Binding Name}"/>
                    <DataGridTextColumn Width="130" Header="Number of hours" Binding="{Binding Hours}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="Subjects" Margin="9,10,0,45" FontSize="36"/>
            <ComboBox Grid.Column="2" SelectedValue="{Binding SelectedFaculty, Mode=TwoWay}" Text="Faculty" Margin="166,13,76,72" ItemsSource="{Binding ListFaculties}"  DisplayMemberPath="Name"   VerticalAlignment="Stretch" Grid.ColumnSpan="2"/>
            <Label Content="Faculty" Grid.Column="2" Margin="76,13,52,72" RenderTransformOrigin="0.098,0.271"/>
            <Button Content="Add" Grid.Column="2" Command="{Binding AddSubjectCommand}" Margin="166,75,114,10" Grid.Row="3" Height="Auto" RenderTransformOrigin="0.082,0.431" Grid.ColumnSpan="2"/>
            <Label Content="University" Grid.Column="1" Margin="10,10,118,72" RenderTransformOrigin="0.098,0.271"/>
            <Button  Content="Update" MaxHeight="70" MaxWidth="220" IsEnabled="{Binding IsEnabledUD}" Grid.Column="0" Command="{Binding UpdateCommand}" Height="Auto" RenderTransformOrigin="0.082,0.431" Margin="10,72,80,10" Background="#FFD8A620"/>
            <Button  Content="Delete" MaxHeight="70" MaxWidth="220" IsEnabled="{Binding IsEnabledUD}" Grid.Column="1" Command="{Binding DeleteCommand}" Height="Auto" RenderTransformOrigin="0.082,0.431" Margin="10,72,81,10" Background="#FFDA4D46"/>
            <ComboBox Grid.Column="1" SelectedValue="{Binding SelectedUniversity, Mode=TwoWay}"  Margin="87,13,10,72" ItemsSource="{Binding ListUniversities}" VerticalAlignment="Stretch"/>
            <TextBox Grid.Column="3" Text="{Binding Name}" Margin="10,18,70,71" Grid.Row="1" TextWrapping="Wrap"/>
            <ListBox Grid.Column="3" DisplayMemberPath="Login" SelectedItem="{Binding AddTeacherToSubject}" ItemsSource="{Binding ListTeachers}" Margin="10,51,10,43" Grid.Row="2" Grid.RowSpan="2"/>
            <TextBox Grid.Column="3" Margin="107,20,10,69" Grid.Row="2" TextWrapping="Wrap" Text="{Binding SearchSubject}"/>
            <Label Content="Name" Grid.Column="2" Margin="94,18,52,71" Grid.Row="1"/>
            <Label Content="Hours" Grid.Column="2" Margin="94,50,52,39" Grid.Row="1" RenderTransformOrigin="0.509,0.308"/>
            <Label Content="Teacher Search" Grid.Column="3" Margin="10,20,114,68" Grid.Row="2" RenderTransformOrigin="0.509,0.308" FontSize="10"/>
            <ListBox SelectedItem="{Binding DeleteTeacherFromSubject}" DisplayMemberPath="Login" ItemsSource="{Binding Teachers}"  Grid.Column="2" Margin="10,51,10,43" Grid.Row="2" Grid.RowSpan="2"/>
            <Label Content="Teachers" Grid.Column="2" Margin="10,20,101,68" Grid.Row="2" RenderTransformOrigin="0.509,0.308" FontSize="10"/>
            <ComboBox ItemsSource="{Binding RangeHour}" SelectedItem="{Binding SelectedHours}" Grid.Column="3" Margin="10,50,70,35" Grid.Row="1" VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Page>
