<Page x:Class="University_students.View.AdminPages.Groups"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_students.View.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Groups">

    <Grid>
        <Label Content="Gr" Foreground="#DD14B42A"></Label>
        <Button  Content="Update" Grid.Column="0" Command="{Binding UpdateCommand}" Height="Auto" RenderTransformOrigin="0.082,0.431" Margin="10,77,10,0" IsEnabled="{Binding IsEnabledUD}" Background="#FFD8A620"/>
        <Button  Content="Delete" Grid.Column="1" Command="{Binding DeleteCommand}" Height="Auto" RenderTransformOrigin="0.082,0.431" Margin="10,77,10,0" IsEnabled="{Binding IsEnabledUD}" Background="#FFDA4D46"/>
    </Grid>
</Page>
