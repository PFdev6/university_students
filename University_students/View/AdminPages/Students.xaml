<Page x:Class="University_students.View.AdminPages.Students"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_students.View.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="Students">

    <Grid Grid.ColumnSpan="4" Grid.RowSpan="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="110*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Margin="9,10,48,10" Grid.Row="1" AutoGenerateColumns="False" Grid.ColumnSpan="5" SelectedItem="{Binding SelectedStudentDG}" ItemsSource="{Binding ListStudents}" Grid.RowSpan="3" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="First Name" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Width="*" Header="Last Name" Binding="{Binding LastName}"/>
                <DataGridTextColumn Width="*" Header="Group" Binding="{Binding Group.NumberGroup}"/>
                <DataGridTextColumn Width="*" Header="First Year" Binding="{Binding Group.FirstYear}"/>
                <DataGridTextColumn Width="*" Header="Speciality" Binding="{Binding Group.Speciality.Name}"/>
                <DataGridTextColumn Width="*" Header="Faculty" Binding="{Binding Group.Speciality.Faculty.Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Students" Margin="9,10,10,0" FontSize="36" Height="70" VerticalAlignment="Top"/>
        <ComboBox Grid.Column="3" SelectedValue="{Binding SelectedFaculty, Mode=TwoWay}" Text="Faculty" Margin="0,13,10,0" ItemsSource="{Binding ListFaculties}"  DisplayMemberPath="Name"   VerticalAlignment="Top" Height="27" HorizontalAlignment="Right" Width="159"/>
        <Label Content="Faculty" Grid.Column="3" Margin="20,10,0,0" RenderTransformOrigin="0.098,0.271" Background="#FF342F2F" Foreground="#DDFFFFFF" FontWeight="Bold" FontFamily="Perpetua Titling MT" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70"/>
        <Label Content="University" Grid.Column="1" Margin="10,10,0,0" RenderTransformOrigin="0.098,0.271" HorizontalAlignment="Left" Width="88" Height="32" VerticalAlignment="Top" Background="#FF342F2F" Foreground="#DDFFFFFF" FontWeight="Bold" FontFamily="Perpetua Titling MT"/>
        <Button  Content="Delete" MaxHeight="70" MaxWidth="220" IsEnabled="{Binding IsEnabledUD}" Command="{Binding DeleteCommand}" Height="30" RenderTransformOrigin="0.082,0.431" Margin="10,85,10,0" Background="#FFDA4D46" BorderBrush="#FFB43B3B" VerticalAlignment="Top"/>
        <ComboBox Grid.Column="1" SelectedValue="{Binding SelectedUniversity, Mode=TwoWay}"  Margin="0,10,1,0" ItemsSource="{Binding ListUniversities}" VerticalAlignment="Top" Height="30" HorizontalAlignment="Right" Width="162"/>
        <TextBox Grid.Column="1" Margin="0,85,1,0" TextWrapping="Wrap" Text="{Binding SearchUsers, Mode=TwoWay}" TextChanged="TextBox_TextChanged" HorizontalAlignment="Right" Width="162" Height="30" VerticalAlignment="Top"/>
        <Label Content="Search" Grid.Column="1" Margin="10,85,0,0" RenderTransformOrigin="0.509,0.308" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="88" Background="#FF342F2F" Foreground="#DDFFFFFF" FontWeight="Bold" FontFamily="Perpetua Titling MT"/>
        <ComboBox Grid.Column="3"  SelectedValue="{Binding SelectedGroups, Mode=TwoWay}" Text="Faculty" Margin="0,50,10,0" ItemsSource="{Binding ListGroups}"  DisplayMemberPath="" VerticalAlignment="Top" Height="27" HorizontalAlignment="Right" Width="159"/>
        <Label Content="Group" Grid.Column="3" Margin="20,50,0,0" RenderTransformOrigin="-0.424,0.333" Background="#FF342F2F" Foreground="#DDFFFFFF" FontWeight="Bold" FontFamily="Perpetua Titling MT" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70"/>
        <Label Content="Speciality" Grid.Column="1" Margin="10,47,0,0" RenderTransformOrigin="0.098,0.271" HorizontalAlignment="Left" Width="88" Height="33" VerticalAlignment="Top" Background="#FF342F2F" Foreground="#DDFFFFFF" FontWeight="Bold" FontFamily="Perpetua Titling MT"/>
        <ComboBox Grid.Column="1" DisplayMemberPath="Name" SelectedValue="{Binding SelectedSpeciality, Mode=TwoWay}"  Margin="0,45,1,0" ItemsSource="{Binding ListSpecialities}" VerticalAlignment="Top" Height="29" HorizontalAlignment="Right" Width="162"/>
    </Grid>
</Page>
